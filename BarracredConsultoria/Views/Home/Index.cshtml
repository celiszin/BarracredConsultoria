@model BarracredConsultoria.ViewModels.ConsultoriaViewModel

@{
    ViewData["Title"] = "Seu Portal de Consultoria";
    Layout = null; 

    bool temDividas = Model.CondicaoFinanceira.TotalDividas > 0;
    string corStatus = temDividas ? "text-red-500" : "text-medium-green";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>BarraCred | @ViewData["Title"]</title>
    
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    
    <script id="tailwind-config">
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "dark-green": "#004438",   // Textos, menus e seriedade
                        "medium-green": "#008744", // Ações principais
                        "light-green": "#1EB53A",  // Destaques e ícones
                        "surface-light": "#F8FAF9", // Fundo do portal
                        "light-divider": "#E2E8E4",
                    },
                    fontFamily: {
                        "display": ["Montserrat", "sans-serif"],
                        "sans": ["Montserrat", "sans-serif"]
                    }
                },
            },
        }
    </script>
</head>

<body class="bg-surface-light text-dark-green min-h-screen flex flex-col">
    
    <nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-md nav-shadow border-b border-light-divider">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <div class="flex items-center gap-2">
                    <div class="w-10 h-10 bg-medium-green rounded flex items-center justify-center">
                        <span class="material-icons-round text-white">account_balance</span>
                    </div>
                    <span class="text-2xl font-extrabold tracking-tight text-dark-green">Barra<span class="text-medium-green">Cred</span></span>
                </div>
                
                <div class="hidden md:flex items-center space-x-10">
                    <a class="text-sm font-semibold text-dark-green hover:text-light-green transition-colors" href="#">Início</a>
                    <a class="text-sm font-semibold text-dark-green hover:text-light-green transition-colors" href="#">Meus Serviços</a>
                    <a class="text-sm font-semibold text-dark-green hover:text-light-green transition-colors" href="#">Educação</a>
                    <a class="text-sm font-semibold text-dark-green hover:text-light-green transition-colors" href="#">Simuladores</a>
                </div>
                
                <div class="flex items-center gap-4">
                    <button class="px-6 py-2.5 bg-medium-green hover:bg-[#007038] text-white text-sm font-bold rounded transition-all flex items-center gap-2">
                        <span class="material-icons-round text-sm">person</span>
                        Meu Perfil
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <main class="flex-grow relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-32 pb-20">
        
        <div class="mb-10">
            <span class="inline-block py-1.5 px-4 rounded-full bg-light-green/10 text-light-green text-xs font-bold uppercase tracking-widest mb-3">
                Clínica Financeira Premium
            </span>
            <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight text-dark-green">Painel do Cooperado</h2>
            <p class="text-dark-green/70 mt-2 font-medium">Análise atualizada em: <span class="text-medium-green font-bold">@Model.Usuario.DataAnalise.ToString("dd/MM/yyyy")</span></p>
        </div>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="bg-light-green/20 border border-light-green/30 text-dark-green px-5 py-4 rounded-xl mb-8 shadow-sm flex items-center gap-3">
                <span class="material-symbols-outlined text-light-green">check_circle</span>
                <span><strong>Sucesso!</strong> @TempData["MensagemSucesso"]</span>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            
            <div class="bg-white p-8 rounded-2xl shadow-lg border-t-4 border-t-medium-green border border-light-divider flex flex-col card-hover">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-light-green/10 rounded-xl flex items-center justify-center">
                        <span class="material-symbols-outlined text-light-green text-2xl">trending_up</span>
                    </div>
                    <h4 class="text-2xl font-extrabold text-dark-green">Seu Momento Financeiro</h4>
                </div>
                <hr class="border-light-divider mb-6" />
                
                <p class="text-4xl font-extrabold @corStatus mb-8">@Model.CondicaoFinanceira.StatusAtual</p>
                
                <ul class="space-y-5 mt-auto">
                    <li class="flex justify-between items-center pb-4 border-b border-light-divider">
                        <span class="text-sm font-semibold text-dark-green/70">Renda Mensal:</span>
                        <strong class="text-dark-green text-lg">@Model.CondicaoFinanceira.RendaMensal.ToString("C")</strong>
                    </li>
                    <li class="flex justify-between items-center pb-4 border-b border-light-divider">
                        <span class="text-sm font-semibold text-dark-green/70">Dívidas Totais:</span>
                        <strong class="text-lg @corStatus">@Model.CondicaoFinanceira.TotalDividas.ToString("C")</strong>
                    </li>
                    <li class="flex justify-between items-center pt-2">
                        <span class="text-sm font-semibold text-dark-green/70">Seu Maior Objetivo:</span>
                        <span class="bg-light-green/20 text-dark-green px-4 py-1.5 rounded-full text-xs font-bold border border-light-green/30">@Model.Usuario.Objetivo</span>
                    </li>
                </ul>
            </div>

            <div class="bg-white p-8 rounded-2xl shadow-lg border border-light-divider flex flex-col card-hover">
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-12 h-12 bg-light-green/10 rounded-xl flex items-center justify-center">
                        <span class="material-symbols-outlined text-light-green text-2xl">forum</span>
                    </div>
                    <h4 class="text-2xl font-extrabold text-dark-green">Consultoria Especializada</h4>
                </div>
                <hr class="border-light-divider mb-6" />
                
                <div class="flex items-center mb-8 bg-surface-light p-5 rounded-xl border border-light-divider">
                    <div class="bg-dark-green border border-dark-green text-white p-3 rounded-lg text-center mr-5 min-w-[75px] shadow-md">
                        <span class="block font-extrabold text-2xl leading-none">@Model.Agendamento.DataHora.ToString("dd")</span>
                        <span class="block text-[10px] uppercase tracking-widest mt-1 font-bold">@Model.Agendamento.DataHora.ToString("MMM")</span>
                    </div>
                    <div>
                        <h6 class="font-bold text-dark-green mb-1">Consulta às @Model.Agendamento.DataHora.ToString("HH:mm")</h6>
                        <span class="inline-block bg-light-green/20 text-dark-green px-2.5 py-1 rounded text-xs font-bold">Status: @Model.Agendamento.Status</span>
                    </div>
                </div>

                <div class="bg-light-green/10 border border-light-green/30 rounded-xl p-5 mb-8 relative overflow-hidden">
                    <div class="absolute -right-4 -top-4 opacity-10">
                        <span class="material-symbols-outlined text-8xl text-light-green">lightbulb</span>
                    </div>
                    <h6 class="font-extrabold text-dark-green flex items-center gap-2 mb-2 text-sm relative z-10">
                        <span class="material-symbols-outlined text-light-green text-lg">lightbulb</span> 
                        Dica do seu Consultor
                    </h6>
                    <p class="text-sm text-dark-green/80 relative z-10 font-medium leading-relaxed">@Model.Agendamento.Observacoes</p>
                </div>

                <form asp-controller="Home" asp-action="SalvarAgendamento" method="post" class="mt-auto space-y-5">
                    <div class="space-y-2">
                        <label for="dataEscolhida" class="text-sm font-bold text-dark-green ml-1">Agendar / Remarcar Horário:</label>
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 material-symbols-outlined text-dark-green/50 text-xl">calendar_month</span>
                            <input type="datetime-local" id="dataEscolhida" name="dataEscolhida" required 
                                   class="w-full bg-surface-light border border-light-divider text-dark-green font-medium rounded-lg py-3.5 pl-11 pr-4 focus:ring-2 focus:ring-medium-green focus:border-transparent outline-none transition-all shadow-sm" />
                        </div>
                    </div>
                    
                    <button type="submit" class="w-full bg-medium-green hover:bg-[#007038] text-white font-bold py-4 rounded-lg transition-all transform hover:-translate-y-0.5 shadow-lg shadow-medium-green/20 flex justify-center items-center gap-2">
                        <span class="material-symbols-outlined text-xl">event_available</span>
                        Confirmar Agendamento
                    </button>
                </form>
            </div>

            <div class="lg:col-span-2 bg-white p-8 md:p-10 rounded-2xl shadow-lg border border-light-divider">
                <div class="flex items-center gap-3 mb-3">
                    <div class="w-12 h-12 bg-light-green/10 rounded-xl flex items-center justify-center">
                        <span class="material-symbols-outlined text-light-green text-2xl">task_alt</span>
                    </div>
                    <h4 class="text-2xl font-extrabold text-dark-green">Seu Plano de Ação Digital</h4>
                </div>
                <p class="text-dark-green/70 mb-6 font-medium">Para atingir seu objetivo, complete as tarefas de educação financeira abaixo.</p>
                <hr class="border-light-divider mb-8" />
                
                <div class="flex flex-col md:flex-row items-center gap-10">
                    <div class="flex-1 w-full">
                        <h5 class="text-xl font-extrabold text-dark-green mb-3">Trilha: <span class="text-medium-green">@Model.Trilha.Titulo</span></h5>
                        <p class="text-dark-green/70 mb-8 leading-relaxed font-medium">@Model.Trilha.Descricao</p>
                        
                        <div class="bg-surface-light border border-light-divider rounded-xl p-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 transition-all hover:border-light-green/50 hover:shadow-md">
                            <div>
                                <div class="flex items-center gap-3 mb-2">
                                    <span class="bg-dark-green text-white text-xs font-bold px-3 py-1.5 rounded uppercase tracking-wider">Aula @Model.Aula.Ordem</span>
                                    <span class="font-extrabold text-dark-green text-lg">@Model.Aula.Titulo</span>
                                </div>
                                <p class="text-sm text-dark-green/60 mt-1 font-medium">@Model.Aula.ConteudoTexto</p>
                            </div>
                            <button class="w-full sm:w-auto bg-dark-green hover:bg-[#002b23] text-white px-8 py-3.5 rounded-lg text-sm font-bold transition-colors flex items-center justify-center gap-2 shadow-lg">
                                <span class="material-symbols-outlined text-lg">play_circle</span>
                                Assistir Aula
                            </button>
                        </div>
                    </div>
                    
                    <div class="hidden md:flex w-1/3 justify-center items-center relative">
                        <div class="absolute inset-0 bg-light-green/10 blur-3xl rounded-full"></div>
                        <span class="material-symbols-outlined text-[8rem] text-medium-green relative z-10">computer</span>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2 bg-white p-8 md:p-10 rounded-2xl shadow-lg border border-light-divider mt-2">
                <div class="flex items-center gap-3 mb-8">
                    <div class="w-12 h-12 bg-light-green/10 rounded-xl flex items-center justify-center">
                        <span class="material-symbols-outlined text-light-green text-2xl">assignment</span>
                    </div>
                    <h4 class="text-2xl font-extrabold text-dark-green">Pesquisa de Satisfação</h4>
                </div>
                
                <div class="w-full overflow-hidden rounded-xl border border-light-divider bg-surface-light">
                    <iframe src="https://beforms.becompliance.com/67bca1d1f0eede0009c7b3b3" 
                            width="100%" 
                            height="600" 
                            frameborder="0" 
                            marginheight="0" 
                            marginwidth="0"
                            class="w-full">
                        Carregando formulário...
                    </iframe>
                </div>
            </div>
        </div>

        <div class="mt-16 flex flex-col items-center gap-4">
            <div class="flex items-center gap-2 text-xs font-bold text-dark-green/50 uppercase tracking-widest">
                <span class="material-symbols-outlined text-sm text-light-green">verified_user</span>
                Conexão Segura e Criptografada
            </div>
        </div>
    </main>

    <footer class="bg-white border-t border-light-divider pt-20 pb-10">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-4 gap-16 mb-16">
                <div class="col-span-2">
                    <div class="flex items-center gap-2 mb-6">
                        <div class="w-9 h-9 bg-medium-green rounded flex items-center justify-center">
                            <span class="material-icons-round text-white text-lg">account_balance</span>
                        </div>
                        <span class="text-2xl font-extrabold tracking-tight text-dark-green">Barra<span class="text-medium-green">Cred</span></span>
                    </div>
                    <p class="text-dark-green/70 max-w-sm leading-relaxed font-medium">
                        Sua parceira estratégica em saúde financeira. Comprometidos com a transparência, ética e o desenvolvimento dos nossos cooperados.
                    </p>
                </div>
                <div>
                    <h5 class="text-dark-green font-extrabold mb-6 text-lg">Links Rápidos</h5>
                    <ul class="space-y-3">
                        <li><a class="text-dark-green/70 hover:text-medium-green transition-colors font-medium" href="#">Simuladores</a></li>
                        <li><a class="text-dark-green/70 hover:text-medium-green transition-colors font-medium" href="#">Educação Financeira</a></li>
                        <li><a class="text-dark-green/70 hover:text-medium-green transition-colors font-medium" href="#">Canais de Atendimento</a></li>
                    </ul>
                </div>
                <div>
                    <h5 class="text-dark-green font-extrabold mb-6 text-lg">Contato</h5>
                    <ul class="space-y-4">
                        <li class="flex items-center gap-3 text-dark-green/70 font-medium">
                            <span class="material-icons-round text-light-green">phone</span>
                            0800 123 4567
                        </li>
                        <li class="flex items-center gap-3 text-dark-green/70 font-medium">
                            <span class="material-icons-round text-light-green">email</span>
                            contato@barracred.com.br
                        </li>
                    </ul>
                </div>
            </div>
            <div class="pt-8 border-t border-light-divider flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-dark-green/50 font-semibold">
                <p>© 2024 BarraCred Cooperativa de Crédito. Todos os direitos reservados.</p>
                <div class="flex gap-8">
                    <a class="hover:text-medium-green transition-colors" href="#">Privacidade</a>
                    <a class="hover:text-medium-green transition-colors" href="#">Termos</a>
                </div>
            </div>
        </div>
    </footer>

    <button class="fixed bottom-6 right-6 p-4 bg-light-green text-white rounded-full shadow-xl border border-light-green/20 hover:scale-110 transition-transform z-50 flex items-center justify-center">
        <span class="material-symbols-outlined text-2xl">support_agent</span>
    </button>
    
</body>
</html>