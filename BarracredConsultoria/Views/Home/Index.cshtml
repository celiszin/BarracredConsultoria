@model BarracredConsultoria.ViewModels.ConsultoriaViewModel

@{
    ViewData["Title"] = "Seu Portal de Consultoria";
    
    bool temDividas = Model.CondicaoFinanceira.TotalDividas > 0;
    string corStatus = temDividas ? "text-danger" : "text-success";
}

<div class="container mt-5">
    <h2 class="text-success fw-bold mb-4">Painel do Cooperado</h2>
    <p class="text-muted">Análise realizada em: @Model.Usuario.DataAnalise.ToString("dd/MM/yyyy")</p>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-success">
                <div class="card-body">
                    <h4 class="card-title text-success"><i class="fas fa-chart-line me-2"></i>Seu Momento Financeiro</h4>
                    <hr />
                    <p class="fs-5 fw-bold @corStatus">@Model.CondicaoFinanceira.StatusAtual</p>
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Renda Mensal:</span>
                            <strong>@Model.CondicaoFinanceira.RendaMensal.ToString("C")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Dívidas Totais:</span>
                            <strong class="@corStatus">@Model.CondicaoFinanceira.TotalDividas.ToString("C")</strong>
                        </li>
                        <li class="list-group-item d-flex justify-content-between px-0">
                            <span>Seu Maior Objetivo:</span>
                            <span class="badge bg-success align-self-center">@Model.Usuario.Objetivo</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body bg-light rounded">
                    <h4 class="card-title text-success"><i class="fas fa-comments me-2"></i>Consultoria Especializada</h4>
                    <hr />
                    
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success text-white p-3 rounded text-center me-3">
                            <span class="d-block fw-bold fs-4">@Model.Agendamento.DataHora.ToString("dd")</span>
                            <span class="d-block small text-uppercase">@Model.Agendamento.DataHora.ToString("MMM")</span>
                        </div>
                        <div>
                            <h6 class="mb-0 fw-bold">Consulta agendada para @Model.Agendamento.DataHora.ToString("HH:mm")</h6>
                            <span class="badge bg-primary mt-1">Status: @Model.Agendamento.Status</span>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 shadow-sm mt-4">
                        <h6 class="alert-heading fw-bold"><i class="fas fa-lightbulb me-1"></i> Dica Especializada</h6>
                        <p class="mb-0 small">@Model.Agendamento.Observacoes</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title text-success"><i class="fas fa-tasks me-2"></i>Seu Plano de Ação Digital</h4>
                    <p class="text-muted small">Para atingir seu objetivo, complete as tarefas de educação financeira abaixo.</p>
                    <hr />
                    
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="fw-bold">Trilha: @Model.Trilha.Titulo</h5>
                            <p class="mb-2">@Model.Trilha.Descricao</p>
                            
                            <div class="card border border-success border-opacity-25 mt-3">
                                <div class="card-body py-2 d-flex justify-content-between align-items-center">
                                    <div>
                                        <span class="badge bg-secondary me-2">Aula @Model.Aula.Ordem</span>
                                        <span class="fw-bold">@Model.Aula.Titulo</span>
                                        <p class="mb-0 small text-muted">@Model.Aula.ConteudoTexto</p>
                                    </div>
                                    <button class="btn btn-sm btn-success rounded-pill px-3">Assistir</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-center mt-3 mt-md-0">
                            <i class="fas fa-laptop-code fa-4x text-success opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>